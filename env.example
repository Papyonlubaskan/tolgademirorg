# =============================================================================
# TOLGA DEMIR - Local Development Environment
# =============================================================================
# Copy this file to .env.local for local development
# For Railway production: Use Railway dashboard to set environment variables
# Never commit actual .env files to version control!

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Tolga Demir
NEXT_PUBLIC_API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration (MySQL)
# -----------------------------------------------------------------------------
DATABASE_URL=mysql://root:@127.0.0.1:3306/tolgademir
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=tolgademir

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate a secure random string for production
# Example: openssl rand -hex 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@tolgademir.org
ADMIN_PASSWORD=change-this-password

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@tolgademir.org
CONTACT_EMAIL=info@tolgademir.org
REPLY_TO_EMAIL=info@tolgademir.org

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
CSRF_SECRET=your-csrf-secret-key-change-this
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Google Maps API (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# -----------------------------------------------------------------------------
# Supabase Configuration (Optional)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
